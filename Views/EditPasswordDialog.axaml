<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Yprotect.Views.EditPasswordDialog"
        Title="🔐 Security Terminal"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        Background="#0a0a0f">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#00d4ff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#ff0080"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00d4ff"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#00d4ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#00d4ff"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#ff0080"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#666"/>
            <Setter Property="BorderBrush" Value="#666"/>
        </Style>
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#555"/>
        </Style>
    </Window.Styles>
    
    <Border Background="#1a1a2e" 
            CornerRadius="20" Margin="15" 
            BorderBrush="#00d4ff" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <Border Grid.Row="0" Background="#00d4ff20" CornerRadius="10" Padding="15" Margin="0,0,0,25">
                <TextBlock Text="◆ PASSWORD ENTRY TERMINAL ◆" 
                           FontSize="16" FontWeight="Black" 
                           Foreground="#00d4ff"
                           HorizontalAlignment="Center" 
                           FontFamily="Consolas"/>
            </Border>
            
            <!-- Site -->
            <TextBlock Grid.Row="1" Text="◦ DOMAIN/SERVICE:" 
                       Classes="label" Margin="0,8,0,5"/>
            <TextBox Grid.Row="2" x:Name="SiteTextBox" 
                     Watermark="gmail.com | facebook.com | github.com" 
                     Margin="0,0,0,15"/>
            
            <!-- Username -->
            <TextBlock Grid.Row="3" Text="◦ USERNAME/EMAIL:" 
                       Classes="label" Margin="0,0,0,5"/>
            <TextBox Grid.Row="4" x:Name="UsernameTextBox" 
                     Watermark="user@domain.com | username123" 
                     Margin="0,0,0,15"/>
            
            <!-- Password -->
            <TextBlock Grid.Row="5" Text="◦ PASSWORD/KEY:" 
                       Classes="label" Margin="0,0,0,5"/>
            <TextBox Grid.Row="6" x:Name="PasswordTextBox" 
                     Watermark="••••••••••••••••••••" 
                     Margin="0,0,0,25"/>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="7" Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="SAVE" x:Name="OkButton" Click="OkButton_Click"/>
                <Button Content="ABORT" x:Name="CancelButton" Click="CancelButton_Click" 
                        Classes="secondary"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>