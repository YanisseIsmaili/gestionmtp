<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Yprotect.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="Yprotect.Views.MainWindow"
        Icon="/Assets/lock-icon.ico"
        Title="YProtect - Gestionnaire de mots de passe"
        Background="{DynamicResource PrimaryBackgroundColor}"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        Width="800" Height="600">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Sidebar -->
		<Border Grid.Column="0" Background="{DynamicResource SecondaryBackground}">
			<StackPanel>
				<TextBlock Text="YProtect" Classes="title" Margin="20,20,0,10"/>
				<TextBlock Text="Gestionnaire de mots de passe" Classes="subtitle" Margin="20,0,0,20"/>
				<Button Classes="nav" Content="Mots de passe" Margin="10,5"/>
				<Button Classes="nav" Content="Générateur" Margin="10,5"/>
				<Button Classes="nav" Content="Paramètres" Margin="10,5"/>
			</StackPanel>
		</Border>

		<!-- Main Content -->
		<Grid Grid.Column="1" Margin="20">
			<TextBlock Text="Bienvenue dans YProtect" Classes="title" Margin="0,0,0,20"/>
			<Border Classes="card">
				<TextBlock Text="Ici, vous pouvez gérer vos mots de passe." Classes="subtitle"/>
			</Border>
		</Grid>
	</Grid>
</Window>